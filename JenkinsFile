pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    environment {
        BROWSER = 'chrome'
        HEADLESS = 'true'
        CUCUMBER_PUBLISH_ENABLED = 'true'
        CUCUMBER_PUBLISH_QUIET = 'false' // set to 'true' if you want minimal logs
    }

	
    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                git credentialsId: 'bitbucket-creds', url: 'https://bitbucket.org/maseeley/test-automation_kingsley.git', branch: 'extentReportIntegration'
            }
        }

        stage('Run Tests and Auto-Publish Cucumber Report') {
            steps {
                echo "Running tests using browser: ${BROWSER}, headless: ${HEADLESS}"
                sh "mvn verify -Dbrowser=${BROWSER} -Dheadless=${HEADLESS}"
            }
        }
    }
	post {
        success {
            publishHTML([allowMissing: false, 
            alwaysLinkToLastBuild: false, 
            icon: '', 
            keepAll: false,
            reportDir: 'ext_reports', 
            reportFiles: 'index.html', 
            reportName: 'Automation Build Report', 
            reportTitles: '', 
            useWrapperFileDirectly: true])
        }
    }
}
