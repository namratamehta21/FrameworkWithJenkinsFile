pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    environment {
        BROWSER = 'chrome'
        HEADLESS = 'true'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                git credentialsId: 'bitbucket-creds', url: 'https://bitbucket.org/maseeley/test-automation_kingsley.git', branch: 'master'
            }
        }

        stage('Run Tests and Generate Report') {
            steps {
                echo "Running tests and generating report using browser: ${BROWSER}"
                sh "mvn verify -Dbrowser=${BROWSER} -Dheadless=${HEADLESS}"
            }
        }

        stage('Publish Cucumber JSON Dashboard') {
            steps {
                echo 'Publishing Cucumber JSON dashboard report...'
                cucumber buildStatus: 'UNSTABLE',
                         fileIncludePattern: 'target/jsonReports/*.json',
                         sortingMethod: 'ALPHABETICAL',
                         trendsLimit: 10
            }
        }
    }

    post {
        always {
            echo 'Archiving report artifacts...'

            publishHTML(target: [
                reportName: 'Cucumber HTML Report',
                reportDir: 'target/cucumber-html-reports',   // <- updated to match your TestRunner plugin output folder
                reportFiles: 'index.html',                     // main file for HTML report (usually index.html or overview-features.html)
                keepAll: true,
                alwaysLinkToLastBuild: true,
                allowMissing: false
            ])

            // Construct the report URL
            def reportUrl = "${env.BUILD_URL}publishHTML/Cucumber%20HTML%20Report/"

            // Print a visually distinct box with the report URL in the console output
            echo """
+-------------------------------------------------------------+
|                       ðŸ“ CUCUMBER REPORT                     |
|                                                             |
|  ${reportUrl}  |
+-------------------------------------------------------------+
"""

            cleanWs()
        }
    }
}
