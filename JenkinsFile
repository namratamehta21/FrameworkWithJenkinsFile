pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    environment {
        BROWSER = 'chrome'
        HEADLESS = 'true'
        CUCUMBER_PUBLISH_ENABLED = 'true'
        CUCUMBER_PUBLISH_QUIET = 'false'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                git credentialsId: 'bitbucket-creds', url: 'https://bitbucket.org/maseeley/test-automation_kingsley.git', branch: 'extentReportIntegration'
            }
        }

        stage('Run Tests and Generate Report') {
            steps {
                echo "Running tests using browser: ${BROWSER}, headless: ${HEADLESS}"
                sh "mvn verify -Dbrowser=${BROWSER} -Dheadless=${HEADLESS}"
                sh 'ls -l ext_reports' // optional: verify report exists
            }
        }
    }

    post {
        always {
            publishHTML([
                allowMissing: false,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'ext_reports',
                reportFiles: 'Igyte_Automation_Report.html',
                reportName: 'Extent Report'
            ])
        }
    }
}
