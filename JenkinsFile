pipeline {
    agent any

    tools {
        maven 'Maven'  // Ensure this matches Jenkins global tool config
    }

    environment {
        BROWSER = 'chrome'
        HEADLESS = 'true'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                git credentialsId: 'bitbucket-creds', url: 'https://bitbucket.org/maseeley/test-automation_kingsley.git', branch: 'master'
            }
        }

        stage('Build') {
            steps {
                echo 'Building Maven project...'
                sh 'mvn clean compile'
            }
        }

        stage('Run Tests - Headless') {
            steps {
                echo "Running tests in headless mode using browser: ${BROWSER}"
                sh "mvn test -Dbrowser=${BROWSER} -Dheadless=${HEADLESS}"
            }
        }

        stage('Generate Cucumber HTML Report') {
            steps {
                echo 'Generating Cucumber HTML report from JSON...'

                // Make sure HTML report is generated here before publishing
                // Replace below command with your actual report generation step if different
                sh '''
                # Example: using cucumber-reporting-maven-plugin or any tool that converts JSON to HTML
                # mvn cucumber-reporting:report
                # or a custom script to generate HTML report from JSON

                # If using a custom script:
                # ./generate-cucumber-html-report.sh

                echo "Assuming the HTML report is generated at target/cucumber-html-reports"
                '''
            }
        }

        stage('Publish Cucumber JSON Dashboard') {
            steps {
                echo 'Publishing Cucumber JSON dashboard report...'
                cucumber buildStatus: 'UNSTABLE',
                         fileIncludePattern: 'target/cucumber-html-reports/Json/cucumber.json', // Adjust path if needed
                         sortingMethod: 'ALPHABETICAL',
                         trendsLimit: 10
            }
        }
    }

    post {
        always {
            echo 'Archiving report artifacts...'

            // Archive JSON reports for trend graphs and history
            cucumber buildStatus: 'UNSTABLE', fileIncludePattern: 'target/cucumber-html-reports/Json/cucumber.json'

            // Publish the generated HTML report inside Jenkins UI
            publishHTML(target: [
                reportName: 'Cucumber HTML Report',
                reportDir: 'target/cucumber-html-reports',
                reportFiles: 'overview-features.html',  // Make sure this is the correct entry HTML file
                keepAll: true,
                alwaysLinkToLastBuild: true,
                allowMissing: false
            ])

            // Print clickable Jenkins HTML report URL to console
            script {
                echo "ðŸ”— Cucumber HTML Report: ${env.BUILD_URL}HTML_Report/"
            }

            // Clean workspace after archiving
            cleanWs()
        }
    }
}
