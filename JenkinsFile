pipeline {
    agent any

    environment {
        // Set default values for headless and browser config
        BROWSER = 'chrome'
        HEADLESS = 'true'
    }

    stage('Checkout') {
        steps {
            echo 'Cloning repository...'
            git credentialsId: 'bitbucket-creds', url: 'https://bitbucket.org/maseeley/test-automation_kingsley.git', branch: 'master'
        }
    }

        stage('Build') {
            steps {
                echo 'Building Maven project...'
                sh 'mvn clean compile'
            }
        }

        stage('Run Tests - Headless') {
            steps {
                echo "Running tests in headless mode using browser: ${BROWSER}"
                sh "mvn test -Dbrowser=${BROWSER} -Dheadless=${HEADLESS}"
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }

        success {
            echo 'Build and tests ran successfully.'
        }

        failure {
            echo 'Build failed. Please check the console output for errors.'
        }
    }
}
