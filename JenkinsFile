pipeline {
    agent any

    tools {
        maven 'Maven' // Make sure 'Maven' is configured in Jenkins tools
    }

    environment {
        BROWSER = 'chrome'
        HEADLESS = 'true'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ”„ Cloning repository...'
                git credentialsId: 'bitbucket-creds',
                    url: 'https://bitbucket.org/maseeley/test-automation_kingsley.git',
                    branch: 'master'
            }
        }

        stage('Run Tests') {
            steps {
                echo "ğŸš€ Running tests using browser: ${BROWSER}"
                sh "mvn test -Dbrowser=${BROWSER} -Dheadless=${HEADLESS}"
            }
        }
    }

    post {
        always {
            echo "âœ… If Cucumber Publish was enabled, you'll see a report link above â˜"
            cleanWs()
        }
    }
}
