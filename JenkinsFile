pipeline {
    agent any

    tools {
        maven 'Maven'  // Ensure this matches Jenkins global tool config
    }

    environment {
        BROWSER = 'chrome'
        HEADLESS = 'true'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                git credentialsId: 'bitbucket-creds', url: 'https://bitbucket.org/maseeley/test-automation_kingsley.git', branch: 'master'
            }
        }

        stage('Build') {
            steps {
                echo 'Building Maven project...'
                sh 'mvn clean compile'
            }
        }

        stage('Run Tests - Headless') {
            steps {
                echo "Running tests in headless mode using browser: ${BROWSER}"
                sh "mvn test -Dbrowser=${BROWSER} -Dheadless=${HEADLESS}"
            }
        }

        stage('Cucumber Report Dashboard') {
            steps {
                echo 'Publishing Cucumber JSON dashboard report...'
                cucumber buildStatus: 'UNSTABLE',
                         fileIncludePattern: 'Json/cucumber.json',
                         sortingMethod: 'ALPHABETICAL',
                         trendsLimit: 10
            }
        }
    }

    post {
        always {
            echo 'Archiving report artifacts...'
            cucumber buildStatus: 'UNSTABLE', fileIncludePattern: '**/cucumber.json'

            publishHTML(target: [
                reportName: 'Cucumber HTML Report',
                reportDir: 'target/cucumber-html-reports',
                reportFiles: 'overview-features.html',
                keepAll: true,
                alwaysLinkToLastBuild: true,
                allowMissing: false
            ])

            // ðŸ”— Print report link in console
            script {
                def jobName = env.JOB_NAME.replaceAll("%2F", "/")
                def buildUrl = env.BUILD_URL
                echo "ðŸ”— Cucumber HTML Report: ${buildUrl}HTML_20Report/"
            }

            cleanWs()
        }
    }
}
