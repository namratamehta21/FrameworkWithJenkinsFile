pipeline {
    agent any

    tools {
        maven 'Maven'  // your Jenkins Maven tool name
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }

    post {
        always {
            junit 'Reports/*.xml'
        }
    }
}
